{ *********************************************************************	}
{  Код с таблицей прерываний для платы E-440   									}
{ *********************************************************************	}
#include "const.h"

.MODULE/ABS=0x0/SEG=int_pm_user       Intr_Table;
.EXTERNAL StartBios, CommandProcessing, Irq0Handler, Irq1Handler;

{ ********************************************************************* }
{ !!!!!!!!!!!!!!!!!! ТАБЛИЦА ОБРАБОТКИ ПРЕРЫВАНИЙ !!!!!!!!!!!!!!!!!!!!! }
{ *********************************************************************	}
{ 	RESET 																					}
	JUMP StartBios; NOP; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний IRQ2 (АЦП)		                             		}
{ *********************************************************************	}
	JUMP(I7); NOP; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний IRQL1 														}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний IRQL0                                				}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний SPORT0 Transmit 											}
{ *********************************************************************	}
	SB = 0x1; RTI; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний SPORT0 Receive											}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

{ *********************************************************************	}
{ Обработчик прерываний IRQE от РС через AVR (команды)						}
{ регистр SE - признак наличия необработанной команды							}
{ *********************************************************************	}
	SE = 0x1; RTI; NOP; NOP;

{ *********************************************************************	}
{ 	Обработчик прерываний BDMA															}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

{ *********************************************************************	}
{	Обработчик прерываний SPORT1 Transmit/IRQ1 (внеш. синхронизация)		}
{ *********************************************************************	}
	JUMP Irq1Handler; NOP; NOP; NOP;

{ *********************************************************************	}
{ Обработчик прерываний SPORT1 Receive/IRQ0 (штатно не используется)		}
{ *********************************************************************	}
	JUMP Irq0Handler; NOP; NOP; NOP;

{ *********************************************************************	}
{	Обработчик прерываний Timer														}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

{ *********************************************************************	}
{	Обработчик прерываний Powerdown													}
{ *********************************************************************	}
	RTI; NOP; NOP; NOP;

.ENDMOD;
